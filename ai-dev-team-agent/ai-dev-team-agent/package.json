{
  "name": "ai-dev-team-agent",
  "displayName": "AI Dev Team Agent",
  "description": "Automated development workflow via AI Agents",
  "version": "0.1.0",
  "publisher": "ai-dev-team",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onChatParticipant:dev_team"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "dev_team",
        "name": "ai-dev-team",
        "description": "AI Agent-based automated development workflow",
        "commands": [
          {
            "name": "start",
            "description": "Start automated development workflow with Project.md"
          },
          {
            "name": "status",
            "description": "Check current workflow status and progress"
          },
          {
            "name": "resume",
            "description": "Resume interrupted workflow"
          },
          {
            "name": "reset",
            "description": "Reset workflow state and start fresh"
          }
        ]
      }
    ],
    "configuration": {
      "title": "AI Dev Team",
      "properties": {
        "aiDevTeam.defaultModel": {
          "type": "string",
          "default": "copilot-gpt-4",
          "description": "Default LLM model to use for agents"
        },
        "aiDevTeam.enableWebTesting": {
          "type": "boolean",
          "default": true,
          "description": "Enable web testing agent with Playwright"
        },
        "aiDevTeam.maxTokensPerRequest": {
          "type": "number",
          "default": 4000,
          "description": "Maximum tokens per LLM request"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "playwright": "^1.53.1"
  }
}
